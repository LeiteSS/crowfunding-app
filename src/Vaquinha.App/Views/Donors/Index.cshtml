@model IEnumerable<Vaquinha.App.Models.DonorViewModel>
@using System.Globalization
 
@{
    ViewData["Title"] = "Doadores";
}

<div class="text-center">
    <h3>Veja quem já doou!</h3>
    <hr />
</div>


<table class="table table-striped table-bordered text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescriptionTime)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Message)
                    </td>
                    <td>
                        <span>@item.Value.ToString("C", CultureInfo.CreateSpecificCulture("pt-BR"))</span>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DescriptionTime)
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">
                    <center> <span class="text-center">Ainda não houveram doações. Seja você o primeiro!</span></center>
                </td>
            </tr>
        }
    </tbody>
</table>
